<%- include('partials/header.ejs') %>

<body id="devhomePage">
  <%- include('partials/navbar.ejs') %>

    <!-- Main Container -->
    <div class="container-fluid">
      <h1 class="text-center">Image Uploader Test</h1>
      <form action="/upload" enctype="multipart/form-data" method="post">
        <div class="row mx-5" style="border: 2px yellow solid">

          <!-- Image upload info -->
          <div class="col-lg-3" style="border: red solid 2px">
            <h2 class="text-center">Upload File:</h2>
            <div class="form-group my-4">
              <label>
                Custom name of file:
                <input
                  class="form-control"
                  type="text"
                  name="customName"
                  autocomplete="off"
                  placeholder="Name of file..."
                />
              </label>
            </div>
            <div class="form-group">
              <label>
                Enter url.....
                <input
                  class="form-control"
                  type="text"
                  name="browserUrl"
                  autocomplete="off"
                  placeholder="url"
                />
              </label>
            </div>
            <p>or</p>
            <div class="form-group">
              <input
                type="file"
                class="form-control form-file-button-color-success"
                name="upload"
                id="upload"
                placeholder="upload-image-file"
                autocomplete="off"
              />
            </div>
          </div>

          <!-- DESCRIPTION data -->
          <div class="col-lg-9 text-center" style="border: green solid 2px">
            <h2>Descriptions and Keywords:</h2>
            <div class="row">
              <% for(attr in controls){%>
                <div class="card col-3 my-1" >
                    <div class="card-body">
                        <h5 class="card-title text-center"><%= attr %></h5>
                        <% controls[attr].forEach(data => { %>
                            <div class="col">
                                <input
                                    class="form-check-input"
                                    type="checkbox"
                                    name=<%= data.name %> 
                                    value=<%= data.name %> 
                                    id=<%= data.name %> 
                                />
                                <label 
                                    class="form-check-label"  
                                    for=<%= data.name %>>
                                    <%= data.content %> 
                                </label>
                            </div>
                            
                        <% }) %>
                    </div>
                </div>
              <% } %>
          </div>
          <!-- end of descriptors -->

          <!-- Text area -->
          <div class="row">
            <div class="mb-3">
              <label for="imageTextArea" class="form-label mt-1">Custom Descriptors <small>(separate with commas)</small></label>
              <textarea class="form-control" name="textDescriptions" id="imageTextArea" placeholder="limit to 200 characters..." rows="4" maxlength="200"></textarea>
            </div>
          </div>
          <!-- end textarea -->

          <!-- buttons -->
          <div class="text-center">
            <button type="submit" class="btn btn-success m-1" style="width: 10vw">Submit</button>
            <button type="reset" class="btn btn-danger m-1" style="width: 10vw">Reset</button>
          </div>
          <!-- end buttons -->
        </div>
      </form>
    </div>
    <!-- end of container -->

    
  </body>

  <%- include('partials/footer.ejs')  %> 

